<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LocationActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/CopyImage"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="300px"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/CopyTenTaiLieu"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:text="tên tài liệu"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:layout_height="100px"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100px"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/CopyLoaiTaiLieu"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Loại tài liệu"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:layout_height="100px"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="100px"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:textStyle="bold" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100px"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Chủ đề"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:layout_height="100px"/>
                    <TextView
                        android:id="@+id/CopyChuDe"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_height="100px"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100px"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Tác giả"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:layout_height="100px"/>
                    <TextView
                        android:id="@+id/CopyTacGia"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_height="100px"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/border_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_height="120px"
                android:text="Nhà xuất bản"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/CopyNXB"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:layout_weight="2"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/border_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_height="120px"
                android:text="Năm xuất bản"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/CopyNamXB"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:layout_weight="2"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/border_bottom"
            android:paddingBottom="10dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:src="@drawable/book"
                android:layout_height="30dp"/>
            <TextView
                android:layout_width="match_parent"
                android:paddingLeft="10dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:text="Thông tin bản sao"

                android:layout_height="wrap_content"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/CopyRecyclerView"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>